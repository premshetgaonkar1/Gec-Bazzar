generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  }

  enum Status{
    rejected
    approved
    pending 
  }

  enum Role{
    user
    admin
  }


model User{
  id        String   @id @default(uuid())
  role      Role @default(user)
  email     String   @unique
  phone     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())  
  updatedAt DateTime @updatedAt
  request Request[]
}

model Items{
  id        String   @id @default(uuid())
  price     Int
  description String?
  name      String   @unique
  quantity  Int      
  image_url String   
  createdAt DateTime @default(now())  
  updatedAt DateTime @updatedAt
  
  request Request[]

}

model Request{
  id String @id @default(uuid())
  itemId String
  item Items @relation(fields: [itemId],references: [id])
  userId String
  user User @relation(fields: [userId],references: [id])
  approvalStatus    Status @default(pending)
  createdAt DateTime @default(now())  
  updatedAt DateTime @updatedAt

}

